# Production Environment Configuration Example
# Copy this to .env and fill in your actual values

ENVIRONMENT=production
DATABASE_URL=postgresql://user:password@host:port/database_name
SECRET_KEY=YOUR-SECURE-RANDOM-64-CHARACTER-SECRET-KEY-HERE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration - Add your production domains
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Encryption key for credentials - Generate with: python -m app.encryption
CREDENTIAL_ENCRYPTION_KEY=YOUR-FERNET-ENCRYPTION-KEY-HERE

# Rate limiting - Enable in production
ENABLE_RATE_LIMITING=true

# Logging level
LOG_LEVEL=WARNING

# Resend Email Configuration
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_production_resend_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_FROM_NAME=Golden Ace

# Contact form recipient email
CONTACT_EMAIL=contact@yourdomain.com

# App/Frontend URL for referral links
APP_URL=https://yourdomain.com