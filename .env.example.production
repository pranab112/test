# Production Environment Configuration Example
# Copy this to .env and fill in your actual values

ENVIRONMENT=production
DATABASE_URL=postgresql://user:password@host:port/database_name
SECRET_KEY=YOUR-SECURE-RANDOM-64-CHARACTER-SECRET-KEY-HERE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration - Add your production domains
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Encryption key for credentials - Generate with: python -m app.encryption
CREDENTIAL_ENCRYPTION_KEY=YOUR-FERNET-ENCRYPTION-KEY-HERE

# Rate limiting - Enable in production
ENABLE_RATE_LIMITING=true

# Logging level
LOG_LEVEL=WARNING